rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ═══════════════════════════════════════════════════════════════════════
    // FUNCIONS AUXILIARS
    // ═══════════════════════════════════════════════════════════════════════

    // Comprova si l'usuari està autenticat
    function isSignedIn() {
      return request.auth != null;
    }

    // Comprova si l'usuari és membre de l'organització
    function isMemberOf(orgId) {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/organizations/$(orgId)/members/$(request.auth.uid));
    }

    // Obté el rol de l'usuari dins l'organització
    function getMemberRole(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(request.auth.uid)).data.role;
    }

    // Comprova si l'usuari és admin de l'organització
    function isAdminOf(orgId) {
      return isMemberOf(orgId) && getMemberRole(orgId) == 'admin';
    }

    // Comprova si l'usuari és admin o treasurer de l'organització
    function canEditFinances(orgId) {
      return isMemberOf(orgId) && getMemberRole(orgId) in ['admin', 'treasurer'];
    }

    // ═══════════════════════════════════════════════════════════════════════
    // REGLES PER A USUARIS
    // ═══════════════════════════════════════════════════════════════════════

    // Perfil d'usuari - cada usuari només pot accedir al seu propi perfil
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // ═══════════════════════════════════════════════════════════════════════
    // REGLES PER A ORGANITZACIONS
    // ═══════════════════════════════════════════════════════════════════════

    match /organizations/{orgId} {
      // CANVI: Qualsevol usuari autenticat pot crear una organització.
      // Un cop creada, només es podrà llegir si ets membre i només l'admin la podrà modificar.
      allow create: if isSignedIn();
      
      // Només membres poden llegir l'organització
      allow read: if isMemberOf(orgId);
      
      // Només admins poden actualitzar o eliminar l'organització
      allow update, delete: if isAdminOf(orgId);

      // ─────────────────────────────────────────────────────────────────────
      // MEMBRES DE L'ORGANITZACIÓ
      // ─────────────────────────────────────────────────────────────────────
      
      match /members/{memberId} {
        // Membres poden llegir altres membres
        allow read: if isMemberOf(orgId);
        
        // Només admins poden afegir o eliminar membres
        allow create, delete: if isAdminOf(orgId);
        
        // Admins poden actualitzar qualsevol membre
        // Usuaris poden actualitzar el seu propi perfil (excepte el rol)
        allow update: if isAdminOf(orgId) || 
          (isSignedIn() && request.auth.uid == memberId && 
           request.resource.data.role == resource.data.role);
      }

      // ─────────────────────────────────────────────────────────────────────
      // DADES FINANCERES (transactions, categories, emissors, projects)
      // ─────────────────────────────────────────────────────────────────────

      match /transactions/{docId} {
        allow read: if isMemberOf(orgId);
        allow create, update, delete: if canEditFinances(orgId);
      }

      match /categories/{docId} {
        allow read: if isMemberOf(orgId);
        allow create, update, delete: if canEditFinances(orgId);
      }

      match /emissors/{docId} {
        allow read: if isMemberOf(orgId);
        allow create, update, delete: if canEditFinances(orgId);
      }

      match /projects/{docId} {
        allow read: if isMemberOf(orgId);
        allow create, update, delete: if canEditFinances(orgId);
      }
    }
  }
}
